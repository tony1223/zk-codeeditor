<?page title="code editor demo" ?>
<zk xmlns:n="native">
	<n:pre >
		Test Readonly Option
	</n:pre>
	
	<vlayout>
		<div>Default: editable (readonly = false)</div>
		<codeeditor mode="html" readOnly="false">
			<attribute name="value"><![CDATA[
	  <h1>Mixed HTML Example</h1>
	  <script>
	    function jsFunc(arg1, arg2) {
	      if (arg1 && arg2) document.body.innerHTML = "test";
	    }
	  </script>
			]]></attribute>
		</codeeditor>		
	
		<div>Readonly true(readonly with cursor)</div>
		<codeeditor mode="html" readOnly="true">
			<attribute name="value"><![CDATA[
	  <h1>Mixed HTML Example</h1>
	  <script>
	    function jsFunc(arg1, arg2) {
	      if (arg1 && arg2) document.body.innerHTML = "test";
	    }
	  </script>
			]]></attribute>
		</codeeditor>	
		
	</vlayout>
</zk>